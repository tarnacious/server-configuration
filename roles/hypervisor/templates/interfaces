auto lo
iface lo inet loopback

auto br0
iface br0 inet6 static
  address {{ hosts.hypervisor.ipv6 }}
  netmask 64
  bridge_stp off
  bridge_ports none
  bridge_ports enp2s0
  gateway fe80::1
  bridge_fd 0
  bridge_maxwait 0

iface br0 inet static
  address {{ hosts.hypervisor.ipv4 }}
  netmask {{ hosts.hypervisor.netmask }}
  gateway {{ hosts.hypervisor.gateway }}
  bridge_ports enp2s0
  bridge_stp off
  bridge_fd 1
  bridge_hello 2
  bridge_maxage 12
