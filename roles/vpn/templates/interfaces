source /etc/network/interfaces.d/*

auto lo
iface lo inet loopback

allow-hotplug {{ internal_interface_device }}
iface {{ internal_interface_device }} inet static
gateway {{ bridge_ipv4_gateway }}
address {{ hosts.vpn.internal.ipv4 }}
netmask 255.255.255.0

allow-hotplug {{ external_interface_device }}

iface {{ external_interface_device }} inet6 static
gateway {{ ipv6_gateway }}
address {{ ipv6_address }}
netmask 64
dns-nameserver {{ hosts.vpn.ipv6 }}

iface {{ external_interface_device }} inet static
gateway {{ ipv4_gateway }}
address {{ ipv4_address }}
netmask {{ ipv4_netmask }}
dns-nameserver {{ hosts.vpn.ipv4 }}
